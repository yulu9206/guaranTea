    <link rel="stylesheet" href="/css/bootstrap.css" />
    <link rel="stylesheet" href="/css/style.css" />
{{!-- header --}}
<ul>
    <li><a href="/">Home</a></li> 
    <li style="float:right"><a href="/orders">Order</a></li>
    {{#if user}}
    <li style="float:right"><a href="users/account">Account</a></li>
    <li style="float:right"><a class="active" href="/users/logout">Logout</a></li>
    {{else}}
    <li style="float:right"><a class="active" href="/users/login">Login</a></li>
    <li style="float:right"><a class="active" href="/users/register">Register</a></li>
    {{/if}}
</ul>

    {{#if errors}}
        {{#each errors}}
            <div class="alert alert-danger">{{msg}}</div>
        {{/each}}
    {{/if}}

<div class="container">
    {{#if user}}
    <h2>Update Information</h2>
    <form method="post" action="/users/account/edit">
    {{else}}
    <h2>Register</h2>
    <form method="post" action="/users/register">
    {{/if}}

   
    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control"  {{#if user}} value="{{user.name}}" {{/if}} name="name" required="true">
    </div>
    <div class="form-group">
        <label>Username</label>
        <input type="text" class="form-control" {{#if user}} value="{{user.username}}" {{/if}} name="username" required>
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="email" class="form-control" {{#if user}} value="{{user.email}}" {{/if}} pattern = "^.+@.+\..{2,4}$" name="email" required>
    </div>
    <div class="form-group">
        <label>Password</label>
        <input type="password" class="form-control" {{#if user}} value="{{user.password}}" {{/if}} name="password" required>
    </div>
    <div class="form-group">
        <label>Confirm Password</label>
        <input type="password" class="form-control" {{#if user}} value="{{user.password}}" {{/if}} name="password2" required>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
